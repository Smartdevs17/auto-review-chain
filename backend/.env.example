# Database Configuration
MONGODB_URI=mongodb://localhost:27017/peerai
# For production: mongodb://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# AI Service Configuration (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
# For testnet: https://sepolia.infura.io/v3/your-infura-project-id
PRIVATE_KEY=your-ethereum-private-key-for-transactions
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Token Configuration
TOKEN_REWARD_PER_REVIEW=100
TOKEN_REWARD_PER_MANUSCRIPT=50
TOKEN_DECIMALS=18

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800
# 50MB in bytes

# IPFS Configuration (for decentralized file storage)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your-ipfs-project-id
IPFS_PROJECT_SECRET=your-ipfs-project-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For production: https://yourdomain.com

# Swagger Documentation Details
SWAGGER_TITLE=PeerAI API
SWAGGER_DESCRIPTION=Decentralized AI Peer Review Platform API
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/peerai.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# External APIs
ARWEAVE_URL=https://arweave.net
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_AI_REVIEWS=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_TOKEN_REWARDS=true
ENABLE_EMAIL_NOTIFICATIONS=false
